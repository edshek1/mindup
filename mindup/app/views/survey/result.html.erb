<div>
    <label>Results</label>
    <p>
    Sucidal Score <%=@sucidalDepress%>
    </p>
    Food Severity Score <%=@foodSeverity%>
    <p>
    General Score <%=@general%>
    </p>
    <p>
    Severity <%=@severity%>
    </p>
    <div>
      <label>We suggest these options</label>
      <% case @sucidalDepress
      when 7..9 %>
      <h2> we reccomend this for high sucidalDepress </h2>
      <% when 4..6%>
      <h2> we reccomend this for medium sucidalDepress </h2>
      <% when 1..3 %>
      <h2> we reccomend this for low sucidalDepress </h2>
      <% when 0 %>
      <h2> we reccomend this for none sucidalDepress </h2>
      <% else %>
      <h2> Please fill out the form correctly! </h2>
      <%end%>

      <% case @foodSeverity
      when 3 %>
      <h2> we reccomend this for high foodSeverity </h2>
      <% when 2%>
      <h2> we reccomend this for medium foodSeverity </h2>
      <% when 1 %>
      <h2> we reccomend this for low foodSeverity </h2>
      <% when 0 %>
      <h2> we reccomend this for none foodSeverity </h2>
      <% else %>
      <h2> Please fill out the form correctly! </h2>
      <%end%>
      <% case @general
      when 11..15 %>
      <h2> we reccomend this for high general </h2>
      <% when 6..10%>
      <h2> we reccomend this for medium general </h2>
      <% when 1..5 %>
      <h2> we reccomend this for  low general </h2>
      <% when 0 %>
      <h2> we reccomend this for none general </h2>
      <% else %>
      <h2> Please fill out the form correctly! </h2>
      <%end%>
      <% case @severity
          when 3 %>
      <h2> we reccomend this for high severity</h2>
      <% when 2%>
      <h2> we reccomend this for medium severity</h2>
      <% when 1 %>
      <h2> we reccomend this for low severity</h2>
      <% when 0 %>
      <h2> we reccomend this for none severity</h2>
      <% else %>
      <h2> Please fill out the form correctly! </h2>
      <%end%>

    </div>
</div>
